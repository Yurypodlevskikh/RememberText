@page
@model RememberText.Areas.Identity.Pages.Account.Manage.ChangeNicknameModel
@{
    ViewData["Title"] = "Change Nickname";
    ViewData["ActivePage"] = ManageNavPages.ChangeNickname;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="nickname-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Nickname"></label>
                <input asp-for="Input.Nickname" class="form-control" />
                <span asp-validation-for="Input.Nickname" class="text-danger"></span>
            </div>
            <button id="update-nickname-button" type="submit" class="btn btn-primary"><i class="far fa-save"></i>&nbsp;Save</button>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}