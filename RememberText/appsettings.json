{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\RText.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\RText.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:G} {CorrelationId} {Message} {NewLine:1} {Exception:1}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "EmailPropertyes": {
    "FromMail": "",
    "HostMail": "",
    "PortMail": "",
    "PassMail": "",
    "EnableSsl": true
  },
  "UserTextSettings": {
    "WarningMin": 70,
    "DangerMin": 90
  }
}
