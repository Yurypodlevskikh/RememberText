@model RememberText.ViewModels.TopicFiltersViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Projects"].Value;
}

@section SidebarMenu{
    <partial name="Partial/_SidebarTagsMenu" />
}

<partial name="Partial/_PublicTopics" model="@Model" />

@section Scripts{
    <environment include="Development">
        <script src="~/js/Project/DisplayProjectText.js" asp-append-version="true" type="module"></script>
        <script src="~/js/HideSidebarMenu.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Project/DisplayProjectText.min.js" asp-append-version="true" type="module"></script>
        <script src="~/js/HideSidebarMenu.min.js" asp-append-version="true"></script>
    </environment>
}
