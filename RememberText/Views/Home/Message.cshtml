@model RememberText.ViewModels.SendGuestBookViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Message"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Localizer["Message"].Value</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Message" method="post">
            <input asp-for="Nickname" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>@Localizer["From"].Value<text>: @Model.Nickname</text></p>
            <div class="input-group mb-3">
                <div class="input-group-append">
                    <span class="input-group-text">
                        @Localizer["Title"].Value<text>:</text>
                    </span>
                </div>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">
                    @Localizer["Message"].Value
                    <span class="text-secondary" title="@Localizer["RequiredField"].Value" data-toggle="tooltip">
                        <i class="fas fa-exclamation-triangle"></i>
                    </span>
                </label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Send"].Value" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
