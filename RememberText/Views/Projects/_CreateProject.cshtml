@model RememberText.ViewModels.TopicFiltersViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer
@using Microsoft.AspNetCore.Identity
@using RememberText.Domain.Entities.Identity
@inject SignInManager<User> SignInManager

<div class="row">
    <div class="col">

        <a asp-action="Create" asp-controller="Projects" class="btn btn-success" title="@Localizer["CreateNewProject"].Value" data-toggle="tooltip">
            <i class="fa fa-plus" aria-hidden="true"></i> @Localizer["NewProject"].Value
        </a>

        @if (SignInManager.IsSignedIn(User))
        {
            if (Model.ViewMode == "UserTopics" || Model.ViewMode == "TagTopics")
            {
                <a asp-controller="Projects" asp-action="Topics" asp-route-viewMode="EditTopics" class="btn btn-warning">
                    <i class="fas fa-file-alt"></i>&nbsp;/&nbsp;<i class="fa fa-cog" aria-hidden="true"></i>
                </a>
            }
            else
            {
                <a asp-controller="Projects" asp-action="Topics" asp-route-viewMode="UserTopics" class="btn btn-warning">
                    <i class="fas fa-file-alt"></i>
                </a>
            }

            @if (User.IsInRole(RememberText.Domain.Entities.Identity.User.RTGenAdministrator))
            {
                <a asp-controller="GuestBookEntries" asp-action="Index" class="btn btn-warning">
                    <i class="fas fa-envelope-open-text"></i>
                </a>

                <a asp-controller="AdminUsers" asp-action="Index" class="btn btn-warning">
                    <i class="fas fa-users-cog"></i>
                </a>
            }

            <a asp-area="Identity" asp-page="/Account/Manage/PersonalData" class="btn btn-warning" title="@Localizer["ShowEditMyProfileDetails"].Value" data-toggle="tooltip">
                <i class="fas fa-user-cog"></i>
            </a>
        }

    </div>
</div>