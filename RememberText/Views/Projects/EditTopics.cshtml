@model RememberText.ViewModels.TopicFiltersViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["MyProjects"];
}

<h4>@ViewData["Title"]</h4>

<div class="mb-2">
    <partial name="_CreateProject" model="@Model"/>
</div>

<div class="row">
    <div class="col">
        <vc:topics shown-for="UserTopics" sort-param="@Model.SortOrder"></vc:topics>
    </div>
</div>

@section Scripts{
    <environment include="Development">
        <script src="~/js/Project/DisplayProjectText.js" asp-append-version="true" type="module"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Project/DisplayProjectText.min.js" asp-append-version="true" type="module"></script>
    </environment>
}

