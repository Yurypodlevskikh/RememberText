<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="Partial/_MetaTags" />

    <partial name="Partial/_Styles" />

    @await RenderSectionAsync("head", required: false) 
</head>
<body>
    <a id="RT_Brand" href="/" class="navbar-brand">
        <span id="logo_box" class="custom-success">
            <span id="logo_character" class="rt-logo-character">R</span>
        </span>
    </a>

    @{
        string alertClass = TempData["WrongResponse"] != null ? "alert-danger" : TempData["SuccessResponse"] != null ? "alert-success" : "";
        string alertText = TempData["WrongResponse"] != null ? TempData["WrongResponse"].ToString() : TempData["SuccessResponse"] != null ? TempData["SuccessResponse"].ToString() : "";
    }

    <partial name="Partial/_CookieConsentPartial" />

    <div class="alert-box">
        <div class="alert-movers @(string.IsNullOrEmpty(alertText) ? "" : "rt-show-hide-alert")">
            <div id="alert_box" class="text-center alert alert-response @alertClass">@alertText</div>
        </div>
    </div>

    <nav id="RT_Nav" class="navbar fixed-top navbar-expand-sm navbar-light">
        <div class="container">
            <div></div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="RT_navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="RT_navbar" class="collapse navbar-collapse">
                <partial name="Partial/_Navbar" />
                <partial name="Partial/_LoginPartial" />
            </div>
        </div>

        <div id="logo_line" class="line-success"></div>
    </nav>
    
    @await RenderSectionAsync("SidebarMenu", required: false) 

    <div id="container-content" class="container">

        <partial name="Partial/_SpaceProgressBar" />

        @RenderBody()

        <partial name="Partial/_DisplayTextModal" />

        <partial name="Partial/_Footer" />

    </div>

    <partial name="Partial/_MainScripts" />

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
